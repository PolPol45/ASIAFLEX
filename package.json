{
  "name": "asiaflex",
  "version": "1.0.1",
  "description": "AsiaFlex Token - Enterprise-grade ERC20 token with proof of reserves and treasury controls",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "test",
    "contracts": "contracts",
    "scripts": "scripts",
    "tasks": "tasks"
  },
  "scripts": {
    "build": "hardhat compile && tsc --project tsconfig.dist.json",
    "test": "hardhat test",
    "test:fork": "hardhat test --network localhost",
    "coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy/00_deploy_asiaflex.ts",
    "deploy:sepolia": "hardhat run scripts/deploy/00_deploy_asiaflex.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy/00_deploy_asiaflex.ts --network mainnet",
    "deploy:polygon": "hardhat run scripts/deploy/00_deploy_asiaflex.ts --network polygon",
    "verify": "hardhat verify",
    "verify:sepolia": "node scripts/verify-deployment.js sepolia",
    "verify:mainnet": "node scripts/verify-deployment.js mainnet",
    "verify:polygon": "node scripts/verify-deployment.js polygon",
    "lint": "npm run lint:ts && npm run lint:sol",
    "lint:ts": "eslint --ext .ts,.tsx,.js --ignore-path .eslintignore .",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:fix": "npm run lint:sol -- --fix && npm run lint:ts -- --fix",
    "typecheck": "tsc --noEmit",
    "clean": "hardhat clean && rm -rf dist/ types/",
    "gas-snapshot": "hardhat test --reporter hardhat-gas-reporter",
    "dev:node": "hardhat node",
    "dev:demo": "hardhat run playground/demo-e2e.ts --network localhost",
    "dev:watch-price": "ts-node playground/price-watcher.ts",
    "ops:mint": "hardhat run scripts/ops/mint.ts",
    "ops:burn": "hardhat run scripts/ops/burn.ts",
    "ops:nav": "hardhat run tasks/nav/update.ts",
    "ops:status": "hardhat run scripts/ops/status.ts",
    "prepare": "husky install",
    "postinstall": "npm run prepare || true"
  },
  "keywords": [
    "defi",
    "ethereum",
    "erc20",
    "proof-of-reserves",
    "treasury"
  ],
  "author": "AsiaFlex Team",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "axios": "^1.11.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chai": "^4.5.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "ethers": "^6.15.0",
    "hardhat": "^3.0.6",
    "hardhat-gas-reporter": "^2.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.3.2",
    "prettier-plugin-solidity": "^1.3.1",
    "semantic-release": "^22.0.12",
    "solhint": "^5.0.3",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.sol": [
      "solhint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
