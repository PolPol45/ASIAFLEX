{
  "name": "asiaflex",
  "version": "1.0.1",
  "description": "AsiaFlex Basket Suite - Managed ERC20 baskets with automated NAV orchestration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "test",
    "contracts": "contracts",
    "scripts": "scripts"
  },
  "scripts": {
    "build": "hardhat compile && tsc --project tsconfig.dist.json",
    "test": "hardhat test",
    "test:fork": "hardhat test --network localhost",
    "coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy/deploy-basket-tokens.ts",
    "deploy:sepolia": "hardhat run scripts/deploy/deploy-basket-tokens.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy/deploy-basket-tokens.ts --network mainnet",
    "deploy:polygon": "hardhat run scripts/deploy/deploy-basket-tokens.ts --network polygon",
    "verify": "hardhat verify",
    "lint": "npm run lint:ts && npm run lint:sol",
    "lint:ts": "eslint --ext .ts --max-warnings=0 --ignore-path .eslintignore .",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:fix": "npm run lint:sol -- --fix && npm run lint:ts -- --fix",
    "typecheck": "tsc --noEmit",
    "clean": "hardhat clean && rm -rf dist/ types/",
    "gas-snapshot": "hardhat test --reporter hardhat-gas-reporter",
    "dev:node": "hardhat node",
    "ops:register": "hardhat run scripts/ops/register-baskets.ts",
    "ops:register:sepolia": "hardhat run scripts/ops/register-baskets.ts --network sepolia",
    "ops:refresh": "hardhat run scripts/ops/refresh-nav.ts",
    "ops:refresh:sepolia": "hardhat run scripts/ops/refresh-nav.ts --network sepolia",
    "ops:mint": "hardhat run scripts/ops/mint-basket.ts",
    "ops:resolve": "hardhat run scripts/ops/resolve-addresses.ts",
    "ops:monitor": "hardhat run scripts/ops/monitor-status.ts",
    "ops:local-mint": "hardhat run scripts/ops/local-run-mint.ts",
    "ops:mint:eufx": "hardhat run scripts/ops/mint-eufx.ts",
    "ops:mint:eufx:sepolia": "hardhat run scripts/ops/mint-eufx.ts --network sepolia",
    "ops:redeem": "hardhat run scripts/ops/redeem-basket.ts",
    "ops:redeem:eufx": "hardhat run scripts/ops/redeem-eufx.ts",
    "ops:redeem:eufx:sepolia": "hardhat run scripts/ops/redeem-eufx.ts --network sepolia",
    "prepare": "husky install",
    "postinstall": "npm run prepare || true"
  },
  "keywords": [
    "defi",
    "ethereum",
    "erc20",
    "proof-of-reserves",
    "treasury"
  ],
  "author": "AsiaFlex Team",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "axios": "^1.11.0",
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^3.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chai": "^4.5.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "ethers": "^6.15.0",
    "hardhat": "^3.0.6",
    "hardhat-gas-reporter": "^2.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.3.2",
    "prettier-plugin-solidity": "^1.3.1",
    "semantic-release": "^22.0.12",
    "solhint": "^6.0.1",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.sol": [
      "solhint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
