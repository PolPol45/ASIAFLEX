{
  "name": "asiaflex",
  "version": "1.0.1",
  "description": "AsiaFlex Token - Enterprise-grade ERC20 token with proof of reserves and treasury controls",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "test",
    "contracts": "contracts",
    "scripts": "scripts",
    "tasks": "tasks"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "test": "hardhat test",
    "test:fork": "ENABLE_MAINNET_FORK=true hardhat test",
    "coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy/00_deploy_asiaflex.ts",
    "deploy:sepolia": "hardhat run scripts/deploy/00_deploy_asiaflex.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy/00_deploy_asiaflex.ts --network mainnet",
    "deploy:polygon": "hardhat run scripts/deploy/00_deploy_asiaflex.ts --network polygon",
    "verify": "hardhat verify",
    "verify:sepolia": "node scripts/verify-deployment.js sepolia",
    "verify:mainnet": "node scripts/verify-deployment.js mainnet",
    "verify:polygon": "node scripts/verify-deployment.js polygon",
    "lint": "npm run lint:ts",
    "lint:ts": "eslint --ext .ts .",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:fix": "npm run lint:ts -- --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "hardhat clean && rm -rf dist/ typechain-types/",
    "gas-snapshot": "REPORT_GAS=true hardhat test",
    "oracle:update": "hardhat run scripts/ops/update-median-oracle.ts",
    "dev:node": "hardhat node",
    "dev:demo": "hardhat run playground/demo-e2e.ts --network localhost",
    "dev:watch-price": "hardhat run playground/price-watcher.ts --network localhost",
    "ops:mint": "ts-node --transpile-only scripts/ops/mint-basket.ts",
    "ops:mint-basket": "ts-node --transpile-only scripts/ops/mint-basket.ts",
    "ops:burn": "ts-node --transpile-only scripts/ops/burn.ts",
    "ops:nav": "hardhat run tasks/nav/update.ts",
    "ops:status": "hardhat run scripts/ops/status.ts",
    "ops:transfer": "ts-node --transpile-only scripts/ops/transfer.ts",
    "ops:nav:dry": "ts-node --transpile-only scripts/ops/price-feeder.ts",
    "ops:nav:update": "hardhat run --network $NETWORK scripts/ops/price-feeder.ts -- --symbols EURUSD,USDJPY --addresses scripts/deployments/$NETWORK.json --commit",
    "ops:nav:watch": "ts-node --transpile-only scripts/ops/nav-watch.ts --commit",
    "test:checker": "ts-node --transpile-only tests/google-checker.spec.ts",
    "ops:e2e": "ts-node --transpile-only scripts/ops/e2e-quick.ts",
    "validate:e2e": "ts-node --transpile-only scripts/ops/validate-reports.ts --e2e",
    "nav:monitor": "ts-node --transpile-only scripts/ops/nav-monitor.ts",
    "nav:monitor:loop": "ts-node --transpile-only scripts/ops/nav-monitor.ts --loop --network sepolia --commit",
    "validate:reports": "ts-node --transpile-only scripts/ops/validate-reports.ts",
    "prepare": "husky install",
    "postinstall": "npm run prepare || true && patch-package"
  },
  "keywords": [
    "defi",
    "ethereum",
    "erc20",
    "proof-of-reserves",
    "treasury"
  ],
  "author": "AsiaFlex Team",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "axios": "^1.11.0",
    "dotenv": "^16.4.5",
    "execa": "^5.1.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@nomicfoundation/ignition-core": "^0.15.13",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.13",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "chai": "^4.5.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.0",
    "hardhat-gas-reporter": "^2.3.0",
    "hardhat-storage-layout": "^0.1.7",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "mocha": "^11.7.2",
    "patch-package": "^8.0.1",
    "prettier": "^3.3.2",
    "prettier-plugin-solidity": "^1.3.1",
    "semantic-release": "^22.0.12",
    "solhint": "^5.0.3",
    "solidity-coverage": "^0.8.16",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.sol": [
      "solhint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
